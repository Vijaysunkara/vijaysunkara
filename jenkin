
pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "sunkaravijay/helloworld"
        DOCKER_TAG = "latest"
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/Vijaysunkara/vijaysunkara.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                script {
                    sh "docker build -t ${helloworld}:${latest} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker image to Docker Hub...'
                script {
                    sh "docker login -u $Sunkaravijay -p $Biji@1234"
                    sh "docker push ${helloworld}:${latest}"
                }
            }
        }

        stage('Deploy Image') {
            steps {
                echo 'Deploying Docker image...'
                script {
                    sh "docker run -d -p 8080:8080 ${DOCKER_IMAGE}:${DOCKER_TAG}"
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution complete.'
        }
    }
}

